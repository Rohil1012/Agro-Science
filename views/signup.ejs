<!DOCTYPE html>
<html>

<head>
    <title>SignUp</title>
    <link rel="stylesheet" type="text/css" href="/css/signup.css">
    <link href="https://fonts.googleapis.com/css?family=Poppins:600&display=swap" rel="stylesheet">
    <script src="https://kit.fontawesome.com/a81368914c.js"></script>
    <meta name="viewport" content="width=device-width, initial-scale=1">
</head>

<body>
    <img class="wave" src="/images/signupwave.png">

    <div class="container">
        <div class="img">
            <img src="/images/signup.svg">
        </div>


        <div class="login-content">

            <!-- sign up form -->
            <form action="/signup" method="POST">
                <h2 class="title">Sign up</h2>
                <!-- username -->
                <div class="input-div one">
                    <div class="i">
                        <i class="fas fa-user"></i>
                    </div>
                    <div class="div">
                        <h5>Username</h5>
                        <input type="text" class="input" name="user" id="user" required>
                    </div>


                </div>
                <!-- email -->
                <div class="input-div two">
                    <div class="i">
                        <i class="fas fa-envelope"></i>
                    </div>
                    <div class="div">
                        <h5>Email</h5>
                        <input type="text" class="input" id="email" name="email" required>

                    </div>
                </div>
       


                <!-- password -->
                <div class="input-div pass">
                    <div class="i">
                        <i class="fas fa-lock"></i>
                    </div>
                    <div class="div">
                        <h5>Password</h5>
                        <input type="password" class="input" name="password" id="password" required>

                    </div>
                </div>
                <div class="password error"></div>


                <!-- signup button -->
                <input type="submit" class="btn" value="SIGN UP">
                <!-- link for already have an account user -->
                <div class="bottom">
                    <p class="bottompara"> Already have an account ? </p>
                    <a class="bottomlink" href="/login">Log in</a>
                </div>
            </form>
        </div>

    </div>
    <script type="text/javascript" src="/js/signup.js"></script>
</body>



</html>