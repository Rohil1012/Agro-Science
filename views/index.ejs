<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Query</title>
    <link rel="stylesheet" href="/css/query.css">
    <link rel="stylesheet" href="/css/vbar.css">
    <!-- font-awesome -->
    <script src="https://kit.fontawesome.com/64d58efce2.js" crossorigin="anonymous"></script>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css">

   


</head>

<body>
    <!-- vbar -->
    <div class="content">
        <div class="vertical-bar">
            <div class="search-icon">
                <a href="/"><i class="fa fa-chevron-circle-left"></i></a>
                <a href="/"><i class="fa fa-home"></i></a>
            </div>
            <div class="social-icons">
            </div>
        </div>
    </div>

    <!-- header form -->
    <section class="query-form">
        <div class="container">
            <header class="head">
                <h2> Agriculture Query</h2>
            </header>

            <!-- form -->


            <!-- username -->

            <form method="POST" action="/addquery">

                <div class="name-wrapper">

                    <input type="text" placeholder="Name" name="name" required />
                </div>


                <!-- description -->

                <div class="query-wrapper">

                    <textarea name="description" id="query" rows="3" placeholder=" Write your query, here !"
                        name="description" required /></textarea>
                </div>


                <button type="submit">Add Query</button>
            </form>

        </div>
    </section>



    <div class="container1">

        <% if(queries.length> 0) { %> <% queries.forEach(querydisplay=> { %>



                <div class="card-body card text-white bg-warning mb-3">

                    <!-- username display -->
                    <div class="udisplay">
                       
                            <center>
                               
                               <h5> <i class="fa fa-user" style="color: #18acb6"></i>&nbsp;&nbsp;<%= querydisplay.name %></h5> 
                            </center>
                    
                    </div>

                    <!-- description display -->
                    <div class="ddisplay">
                        <p class="cardtext">
                            <%= querydisplay.description %>
                        </p>
                    </div>

                    <!-- suggestions box -->
                    <div class="query-wrapper">
                        <textarea name="description" id="textarea" rows="2"
                            placeholder=" Write your suggestions, here !"></textarea>
                    </div>

                    <!-- post button -->
                    <center><button id="submitBtn" style="margin-bottom: 15px;">Post</button></center>

                
                    <div class="commentContainer">
                        

                            <ul class="comment__box" style="color:black; list-style-type: none;">

                            </ul>
                      
                    </div>

                </div>





                <% }); %>
                    <% } %>


    </div>


    <!-- script -->
    <script src="/socket.io/socket.io.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/moment.js/2.25.3/moment.min.js"></script>
    <script src="/js/app.js"></script>
   

</body>

</html>








































